@{
    ViewData["Title"] = "File Your Taxes Here";
}

<h1>@ViewData["Title"]</h1>
<form asp-controller="Home" asp-action="Output" method="post">
	<div class="row">
		<div class="col-12">
				<input id="FirstInput" type="text" name="FirstInput" placeholder="noun" />	
		</div>
	</div>
	<div class="row">
		<div class="col-12">
				<input id="SecondInput" type="text" name="SecondInput" placeholder="noun (plural)" />
		</div>
	</div>
		<div class="row">
		<div class="col-12">
				<input id="ThirdInput" type="text" name="ThirdInput" placeholder="verb (present tense)" />
		</div>
	</div>
		<div class="row">
		<div class="col-12">
				<input id="FourthInput" type="text" name="FourthInput" placeholder="noun" />
		</div>
	</div>
		<div class="row">
		<div class="col-12">
				<input id="FifthInput" type="text" name="FifthInput" placeholder="adjective" />
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<button type="submit">Submit</button>
		</div>
	</div>
</form>

