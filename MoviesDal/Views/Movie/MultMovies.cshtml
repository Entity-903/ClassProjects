@model IEnumerable<Movie>

<h1>Movie List</h1>

@if (Model == null || Model.Count() == 0)
{
	<h2>No Movies Provided</h2>
}
else
{
	<h4>@TempData["Success"]</h4>

	<form class="d-flex" asp-controller="Movie" asp-action="Search" method="post">
		<input name="key" class="form-control me-2" type="search" placeholder="Search" />
		<button class="btn btn-secondary my-2" type="submit">Search</button>
	</form>

	<div class="row">
	@foreach (Movie m in Model)
	{
		@*<h3>@m.Title</h3>
		<h3>@m.Year</h3>
		<h3>@m.Rating</h3>*@

		//LoanedDate.Value.ToShortDateString

		<div class="col-4">
		<partial name="_MoviePartialView.cshtml" for="@m" />
		</div>
		
	}
	</div>
}
