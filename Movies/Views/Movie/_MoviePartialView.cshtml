@model Movie

@if (Model == null)
{
			<h2>No Movie Provided</h2>
}
else
{
			<h3>@Model.Title</h3>
			<h3>@Model.Year</h3>
			<h3>@Model.Rating</h3>
			<img src="@Model.Image" width="200" />
			<input type="hidden" name="id" value="@Model.Id" />
			<a asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary mx-2">
					<i class="bi bi-wrench"></i> Edit
			</a>
			<a asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mx-2">
					<i class="bi bi-twitter-x"></i> Shadow Realm
			</a>
}

@if (Model.ReleaseDate.HasValue)
{
	Model.ReleaseDate.Value.ToShortDateString();
}

